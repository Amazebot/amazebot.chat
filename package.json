{
  "name": "amazebot.chat",
  "version": "1.0.0",
  "description": "amazebot.chat build dependencies",
  "main": "www/index.html",
  "repository": "https://github.com/Amazebot/amazebot.chat.git",
  "author": "Tim Kinnane <timkinnane@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "bower": "^1.8.4",
    "harp": "^0.25.0"
  },
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "harp": "harp server -p 2999",
    "harp-pid": "ps -ef | grep harp",
    "harp-kill": "kill $(ps aux | grep '[h]arp' | awk '{print $2}')",
    "sync": "browser-sync start --proxy localhost:2999 --files public/**/*.js, public/**/*.css, public/**/*.html",
    "dev": "npm-run-all --parallel harp sync",
    "clean": "rm -R ./www 2> /dev/null || true",
    "install": "bower install --config.directory=public/components",
    "compile": "harp compile",
    "build": "npm run clean && npm run compile"
  },
  "devDependencies": {
    "standard": "^11.0.1"
  }
}
